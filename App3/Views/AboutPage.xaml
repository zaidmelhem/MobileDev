<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3.Views.AboutPage"
             xmlns:vm="clr-namespace:App3.ViewModels"
             Title="{Binding Title}">
    <StackLayout  >
        <StackLayout  Orientation="Horizontal" >
            <StackLayout>
                <Button Text="Show !" 
                Clicked="Button_Clicked" x:Name="Button_1" Margin="20" />
                <Button Text="Hide !" Clicked="Button_Clicked_1"  Margin="20" />
            </StackLayout>
            <StackLayout>
                <Label x:Name="label" HorizontalOptions="CenterAndExpand" FontSize="13"  />
            </StackLayout>
        </StackLayout>
        
    </StackLayout>
    
   


</ContentPage>
